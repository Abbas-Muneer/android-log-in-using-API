<?xml version="1.0" encoding="utf-8"?>
<!-- edittext_border.xml -->
<shape xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="ExtraText">
    <solid android:color="#FFFFFF" /> <!-- Set the background color, in this case, white -->
    <stroke
        android:width="1dp"
        android:color="#FF000000" /> <!-- Set the color of the stroke, in this case, black -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" /> <!-- Set the bottom padding -->
</shape>
